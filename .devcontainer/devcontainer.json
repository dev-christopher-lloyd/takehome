{
  "name": "Creative Automation POC Dev",
  // Use docker compose for dependency containers
  "dockerComposeFile": [
    "../docker-compose.yaml"
  ],
  "service": "api",
  "workspaceFolder": "/app",
  // Map local source code into container for live editing
  "mounts": [
    "source=${localWorkspaceFolder}/app,target=/app/app,type=bind"
  ],
  // Recommended extensions
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "batisteo.vscode-django",
        "eamodio.gitlens",
        "charliermarsh.ruff",
        "ms-toolsai.jupyter"
      ]
    }
  },
  // Execute after container builds
  "postCreateCommand": "python3 -m venv /opt/venv && . /opt/venv/bin/activate && pip install --upgrade pip && pip install -r requirements.txt",
  "remoteUser": "root",
  // Forward API port
  "forwardPorts": [
    8000,
    5432,
    9000,
    9001
  ],
  // Ensures container shares git credentials
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  }
}